APP_NAME=ytconvert
APP_VERSION=0.1.0
APP_NAME=" YurTube MediaConversion Service"
YTCONVERT_HOST=192.168.7.3
YTCONVERT_PORT=9096

# If set, all calls except Health/Info require Bearer token
YTCONVERT_TOKEN=

YTCONVERT_REDIS_URL=redis://localhost:6379/0
YTCONVERT_REDIS_PREFIX=ytconvert:

# Workdir for job files
YTCONVERT_WORKDIR=/tmp/ytconvert/jobs

# TTL for finished jobs
YTCONVERT_TTL_SECONDS=86400

YTCONVERT_FFMPEG=ffmpeg
YTCONVERT_FFPROBE=ffprobe

# Optional max upload size (0 = unlimited)
YTCONVERT_MAX_UPLOAD_BYTES=0

YTCONVERT_DOWNLOAD_CHUNK_BYTES=1048576
YTCONVERT_WATCH_HEARTBEAT_SEC=10